{{#if pinnedNotesCount}}
  {{#basic-dropdown local-class="pinned-notes-dropdown" matchTriggerWidth=true renderInPlace=true as |dropdown|}}
    {{#dropdown.trigger local-class="sandbox-trigger" tabindex=-1}}
      <div local-class="pinned-notes-trigger">
        <div local-class="conversations-count">
          {{inline-svg "pin-default"}}
        </div>
        <div local-class="trigger-text" class="{{qa-cls "qa-pinned-note-count"}}">{{pinnedNotesText}}</div>
        <div local-class="chevron">
          {{inline-svg "chevron-down-circle"}}
        </div>
      </div>
    {{/dropdown.trigger}}

    <div local-class="sandbox-dropdown {{unless dropdown.isOpen "closed"}}">
      {{ko-pinned-notes/dropdown notes=model.viewNotes dropdown=dropdown}}
    </div>
  {{/basic-dropdown}}
{{/if}}
