<div class="{{bigSlotClass}}">
  <br>
  {{ko-form/field/label text=(t "admin.automation_actions_builder.labels.request_payload")}}
  {{ko-admin/forms/description small=true link=(concat "https://support.kayako.com/article/1146-sending-case-notifications-to-external-systems-with-endpoints?utm_source=app&utm_campaign=in-product-help&utm_medium=adminarea&utm_content=" type "3") description="admin.automation_actions_builder.label.request_payload.description" linkText="admin.automation_actions_builder.label.request_payload.description_link"}}
  {{ko-radio qaClass="ko-admin_automation-actions-builder_endpoint-http-post--simple" label=(t "admin.automation_actions_builder.label.http_simple") checked=(eq payloadFormat 'simple') onChange=(action "changePayloadFormat" 'simple')}}
  {{ko-radio qaClass="ko-admin_automation-actions-builder_endpoint-http-post--custom" label=(t "admin.automation_actions_builder.label.http_custom") checked=(eq payloadFormat 'custom') onChange=(action "changePayloadFormat" 'custom')}}
</div>
{{#if (eq payloadFormat 'custom')}}
  <div class="{{bigSlotClass}}">
    <br>
    {{#if endpointContentTypeDescriptionIntlString}}
      {{ko-admin/forms/description small=true  description=endpointContentTypeDescriptionIntlString}}
    {{/if}}
    {{ko-input
      name="endpoint-payload"
      value=automationAction.value
      onInput=(action (mut automationAction.value) value="target.value")
      size="full"
      multiline=true
      lines=6}}
  </div>
  <div class="{{bigSlotClass}}">
    {{ko-admin/forms/description small=true link=(concat "https://support.kayako.com/article/1172-adding-dynamic-content-with-placeholders?utm_source=app&utm_campaign=in-product-help&utm_medium=adminarea&utm_content=" type "2") description="admin.automation_actions_builder.label.placeholders_allowed.description" linkText="admin.automation_actions_builder.label.placeholders_allowed.description_link"}}
  </div>
{{/if}}
