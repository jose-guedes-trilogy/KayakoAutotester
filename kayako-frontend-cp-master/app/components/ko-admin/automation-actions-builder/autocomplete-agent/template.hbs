<div class="{{smallSlotClass}}">
  {{#ko-select
    selected=automationAction.option
    options=definition.options
    placeholder=(t "admin.automation_actions_builder.select_operator")
    onChange=(action (mut automationAction.option))
    searchEnabled=false
    as |operator|}}
    {{t (concat "admin.automation_actions_builder.operators." operator)}}
  {{/ko-select}}
</div>
{{#if (and automationAction.option requiresValue)}}
  <div class="{{smallSlotClass}}">
    {{#ko-select
      selected=selected
      options=options
      beforeOptionsComponent="ko-admin/automation-actions-builder/autocomplete-agent/before-options"
      search=(perform search)
      searchEnabled=true
      onChange=(action (mut selected))
      onKeyDown=(action "preventSubmissionOnEnter")
      as |opt|}}
      {{opt.text}}
    {{/ko-select}}
  </div>
{{/if}}
