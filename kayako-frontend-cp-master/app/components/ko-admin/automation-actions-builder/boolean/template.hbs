<div class="{{smallSlotClass}}">
  {{#ko-select
    selected=automationAction.option
    options=definition.options
    placeholder=(t "admin.automation_actions_builder.select_operator")
    onChange=(action (mut automationAction.option))
    searchEnabled=false
    as |operator|}}
    {{t (concat "admin.automation_actions_builder.operators." operator)}}
  {{/ko-select}}
</div>
{{#if (and automationAction.option requiresValue)}}
  <div class="{{smallSlotClass}}">
    {{#ko-select
      selected=automationAction.value
      options=options
      onChange=(action (mut automationAction.value))
      searchEnabled=false
    as |opt|}}
      {{t (concat 'admin.automation_actions_builder.values.' opt)}}
    {{/ko-select}}
  </div>
{{/if}}
