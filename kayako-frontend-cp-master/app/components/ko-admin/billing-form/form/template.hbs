{{#ko-form/field class=(qa-cls 'countries')}}
  {{#ko-form/field/label}} {{t 'account.trial.billing.country'}} {{/ko-form/field/label}}
  {{#ko-select
    options=parent.countries
    selected=parent.billing.country
    searchEnabled=true
    searchField="country"
    size="medium"
    name="country"
    disabled=parent.saving
    onChange=(action (mut parent.billing.country) ) as |country|}}
    {{country.country}}
  {{/ko-select}}
  {{ko-form/field/errors errors=parent.formErrors.country}}
{{/ko-form/field}}

